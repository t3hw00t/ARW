{
  "$schema": "https://schema.tauri.app/v2/capabilities.schema.json",
  "identifier": "main",
  "description": "Main capabilities for Agent Hub (ARW) Launcher",
  "permissions": [
    "notification:default",
    "autostart:default",
    "window-state:default",
    {
      "identifier": "arw-commands",
      "description": "Allow invoking Agent Hub (ARW) launcher commands from the UI.",
      "commands": {
        "allow": [
          "check_service_health",
          "open_debug_ui",
          "open_debug_window",
          "open_events_window",
          "open_logs_window",
          "open_models_window",
          "open_connections_window",
          "open_hub_window",
          "open_chat_window",
          "open_training_window",
          "open_trial_window",
          "run_trials_preflight",
          "active_window_bounds",
          "run_tool_admin",
          "projects_import",
          "projects_file_get",
          "projects_file_set",
          "models_list",
          "models_refresh",
          "models_save",
          "models_load",
          "models_add",
          "models_delete",
          "models_default_get",
          "models_default_set",
          "models_download",
          "models_download_cancel",
          "start_service",
          "stop_service",
          "get_prefs",
          "set_prefs",
          "launcher_service_log_path",
          "launcher_recent_service_logs",
          "launcher_autostart_status",
          "set_launcher_autostart",
          "open_url",
          "open_path",
          "open_in_editor"
        ],
        "deny": []
      }
    }
  ]
}
