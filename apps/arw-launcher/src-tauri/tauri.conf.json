{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Hub (ARW) Launcher",
  "identifier": "org.arw.launcher",
  "build": {
    "frontendDist": "ui",
    "removeUnusedCommands": true
  },
  "app": {
    "security": {
      "csp": {
        "default-src": "'none'",
        "img-src": "'self' asset: data:",
        "style-src": "'self'",
        "script-src": "'self'",
        "connect-src": "asset: http://127.0.0.1:* ipc:",
        "frame-src": "'none'",
        "object-src": "'none'",
        "base-uri": "'none'",
        "form-action": "'none'"
      }
    }
  },
  "bundle": {
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": { "type": "downloadBootstrapper" }
    }
  }
}
