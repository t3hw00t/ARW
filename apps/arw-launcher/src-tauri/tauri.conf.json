{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARW Launcher",
  "version": "0.1.0",
  "identifier": "org.arw.launcher",
  "build": {
    "frontendDist": "ui",
    "removeUnusedCommands": true
  },
  "app": {
    "security": {
      "csp": {
        "default-src": "'self' asset:",
        "img-src": "'self' asset: data:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline'",
        "connect-src": "http://127.0.0.1:* ipc:",
        "frame-src": "'none'"
      }
    }
  }
  ,
  "bundle": {
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": "downloadBootstrapper"
    }
  }
}
