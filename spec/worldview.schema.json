{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arw.dev/schema/worldview.json",
  "title": "Worldview Graph",
  "type": "object",
  "required": ["claims", "refresh_days", "require_citations"],
  "additionalProperties": false,
  "properties": {
    "claims": {
      "type": "array",
      "description": "Belief statements with confidence and provenance.",
      "minItems": 0,
      "maxItems": 4096,
      "items": {
        "$ref": "#/$defs/claim"
      }
    },
    "relationships": {
      "type": "array",
      "description": "Directed edges expressing dependencies between claims.",
      "items": {
        "type": "object",
        "required": ["source", "target", "relation"],
        "additionalProperties": false,
        "properties": {
          "source": {
            "type": "string",
            "description": "Claim identifier for the origin of the relationship.",
            "minLength": 1,
            "maxLength": 128
          },
          "target": {
            "type": "string",
            "description": "Claim identifier for the destination of the relationship.",
            "minLength": 1,
            "maxLength": 128
          },
          "relation": {
            "type": "string",
            "description": "Semantic link label (supports dotted namespace).",
            "pattern": "^[a-z][a-z0-9_.:-]{2,64}$"
          },
          "weight": {
            "type": "number",
            "minimum": -1.0,
            "maximum": 1.0
          },
          "evidence": {
            "type": "array",
            "description": "Pointers backing the relation.",
            "items": {
              "type": "string",
              "pattern": "^@[A-Za-z0-9:._-]{4,128}$"
            },
            "maxItems": 16,
            "uniqueItems": true
          }
        }
      },
      "maxItems": 8192,
      "uniqueItems": true
    },
    "refresh_days": {
      "type": "integer",
      "description": "How often claims should be revalidated.",
      "minimum": 1,
      "maximum": 365
    },
    "require_citations": {
      "type": "boolean",
      "description": "If true, every claim must provide at least one citation."
    },
    "last_audited_at": {
      "type": "string",
      "format": "date-time"
    },
    "notes": {
      "type": "array",
      "description": "Free-form audit log entries.",
      "items": {
        "type": "object",
        "required": ["timestamp", "message"],
        "additionalProperties": false,
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 2048
          },
          "actor": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 64
            },
            "maxItems": 16,
            "uniqueItems": true
          }
        }
      },
      "maxItems": 256
    }
  },
  "$defs": {
    "claim": {
      "type": "object",
      "required": ["id", "statement", "confidence", "sources"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "statement": {
          "type": "string",
          "minLength": 1,
          "maxLength": 4096
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "last_checked_at": {
          "type": "string",
          "format": "date-time"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["pointer"],
            "additionalProperties": false,
            "properties": {
              "pointer": {
                "type": "string",
                "pattern": "^@[A-Za-z0-9:._-]{4,128}$"
              },
              "kind": {
                "type": "string",
                "enum": ["primary", "secondary", "anecdotal", "simulated"]
              },
              "notes": {
                "type": "string",
                "maxLength": 2048
              }
            }
          },
          "minItems": 0,
          "maxItems": 16
        },
        "policy_tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          },
          "maxItems": 16,
          "uniqueItems": true
        }
      }
    }
  }
}
