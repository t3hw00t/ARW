{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arw/spec/schemas/ui_screenshot_tool.json",
  "title": "ui.screenshot.capture",
  "type": "object",
  "properties": {
    "scope": {
      "type": "string",
      "description": "Capture target. Defaults to 'screen'. Accepts screen | display:n | window:<id> | region:x,y,w,h",
      "default": "screen"
    },
    "format": {
      "enum": ["png", "jpg"],
      "default": "png",
      "description": "Image format written to disk."
    },
    "downscale": {
      "type": "integer",
      "minimum": 1,
      "description": "Optional max width for the inline preview."
    }
  }
}

