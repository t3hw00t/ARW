{
  "$schema": "https://spec.openapis.org/oas/3.1/dialect/base",
  "openapi": "3.1.0",
  "info": {
    "title": "ARW Service API",
    "version": "0.1.0-beta",
    "description": "Preview OpenAPI description for the local ARW HTTP service. Endpoints and schemas may evolve before 1.0."
  },
  "servers": [
    { "url": "http://127.0.0.1:8090", "description": "Local dev" }
  ],
  "paths": {
    "/state/health": {
      "get": {
        "summary": "Healthcheck",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "Service healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" },
                    "code": { "type": "string", "example": "ready" }
                  },
                  "required": ["status", "code"]
                }
              }
            }
          }
        }
      }
    },
    "/debug": {
      "get": {
        "summary": "Debug UI",
        "description": "Serves the local debug user interface when ARW_DEBUG=1.",
        "responses": { "200": { "description": "HTML page" } }
      }
    },
    "/events": {
      "get": {
        "summary": "Serverâ€‘Sent Events stream",
        "operationId": "getEvents",
        "description": "Stream of events used by the UI and tools.",
        "responses": {
          "200": {
            "description": "SSE stream",
            "content": {
              "text/event-stream": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}

