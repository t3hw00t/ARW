{
  "name": "ARW Dev",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "ms-vscode.powershell"
      ]
    }
  },
  "forwardPorts": [8090],
  "postCreateCommand": "bash -lc 'nix --version && nix develop --command cargo build --workspace --locked || true'",
  "remoteUser": "vscode"
}

